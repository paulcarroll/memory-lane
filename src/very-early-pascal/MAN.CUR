  Manmasks[0,1] := $B01F;    {1011000000011111}
  Manmasks[0,2] := $B01F;    {1011000000011111}
  Manmasks[0,3] := $383F;    {0011100000111111}
  Manmasks[0,4] := $BC7F;    {1011110001111111}
