  Manmasks[1,12] := $0000;   {0000000000000000}
  Manmasks[1,13] := $0000;   {0000000000000000}
  Manmasks[1,14] := $0000;   {0000000000000000}
  Manmasks[1,15] := $4010;   {0100000000010000}
  regs.AX := 9;
  regs.BX := 1;
  regs.CX := 0;
  regs.DX := ofs(Manmasks);
