program Line;

uses Graph, Crt;
var
   ErrorCode, Gd, Gm, Angle, x1, x2, y1, y2: integer;
   i: Boolean;
procedure CheckGraph;
begin
     Gd := Detect;
     InitGraph(Gd,Gm,'\tp\bgi');
     ErrorCode := GraphResult;
     if ErrorCode <> GrOk then
     begin
          Write('Critical Graphics Error: ',GraphErrorMsg(ErrorCode));
          Halt(1);
     end;
end;
begin
     CheckGraph;
     X1 := (GetMaxX) div 2;
     X2 := (GetMaxX) div 2;
     Y1 := 60;Y2 := GetMaxY - 60;
     SetWriteMode(XORPut);
     moveto(x1,y1);
     lineto(x2,y2);
     Delay(20);
     Lineto(X2,Y2);
     repeat
           while (angle<90) or (angle>180) do
           begin
                Dec(x1,a); Inc(x2,3);
                Inc(y1,b); Dec(y2);
                moveto(x1,y1);
                lineto(x2,y2);
                delay(20);
                lineto(x2,y2);
                if keypressed then halt(1);
           end;
     until KeyPressed;
     closegraph;
end.